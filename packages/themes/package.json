{
    "name": "@mypjt/themes",
    "version": "0.0.1",
    "type": "module",
    "main": "dist/index.js",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.js",
            "require": "./dist.index.cjs"
        },
        "./themes.css": "./dist/themes.css"
    },
    "scripts": {
        "build": "npm run build:build.config && npm run build:type && npm run build:css",
